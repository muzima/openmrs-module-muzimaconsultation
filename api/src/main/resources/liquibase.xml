<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <!--
        See http://www.liquibase.org/manual/home#available_database_refactorings
        for a list of supported elements and attributes
    -->
    
    <changeSet id="1" author="samuelowino">
        
        <createTable tableName="Message">
            <column name="id" type="int"/>
            <column name="uuid" type="java.lang.String"/>
            <column name="source" type="java.lang.String"/>
            <column name="sender" type="java.lang.String"/>
            <column name="receiver" type="java.lang.String"/>
            <column name="subject" type="java.lang.String"/>
            <column name="senderDate" type="java.lang.String"/>
            <column name="senderTime" type="java.lang.String"/>
            <column name="voided" type="java.lang.Boolean"/>
                
        </createTable>
    </changeSet>
    
</databaseChangeLog>